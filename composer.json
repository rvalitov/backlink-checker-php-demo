{
  "name": "rvalitov/backlink-checker-php-demo",
  "description": "Examples and demo of backlink-checker-php library",
  "homepage": "https://github.com/rvalitov/backlink-checker-php-demo",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "phpcbf": "phpcbf",
    "phpcs": "phpcs -s",
    "phpcs-fixer": "php-cs-fixer --stop-on-violation --verbose check",
    "phpcs-fixer:fix": "php-cs-fixer fix",
    "phpmd": "phpmd src/ text phpmd.xml",
    "phpstan": "phpstan analyse --level max src tests",
    "psalm": "psalm --show-info=true",
    "test": "phpunit --coverage-clover ./coverage/clover.xml --coverage-html ./coverage/html --coverage-xml ./coverage/xml --coverage-text --log-junit ./coverage/execution.xml"
  },
  "authors": [
    {
      "name": "Ramil Valitov",
      "email": "ramil@walitoff.com",
      "homepage": "https://github.com/rvalitov"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0.7 || >=8.1",
    "ext-mbstring": "*",
    "rvalitov/backlink-checker-php": "^3.0.0",
    "league/climate": "^3.10.0"
  },
  "require-dev": {
    "ext-gd": "*",
    "phpmd/phpmd": "^2.15",
    "squizlabs/php_codesniffer": "^3.11",
    "phpunit/phpunit": "^9.6",
    "phpunit/php-code-coverage": "^9.2",
    "friendsofphp/php-cs-fixer": "^3.66",
    "phpstan/phpstan": "^2.1",
    "vimeo/psalm": "^5.26",
    "php-mock/php-mock-phpunit": "^2.10"
  }
}
